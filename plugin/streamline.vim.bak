"set statusline=%f      "Path to the file (filename)"
"set statusline+=\ \    "Add spaces after that"
"set statusline+=FileType:
"set statusline+=\ %y
"set statusline+=\ \ \  "Adds spaces after that"
"set statusline+=%l     "Shows the current line number"
"set statusline+=/%L    "Shows the total number of line"


set statusline=   "Coment for space
set statusline=%3*\ %f\   "Just some"
set statusline+=%2*\%m
"Adds the current file name, flg for Readonly files, '+' if changed"
set statusline+=%2*\%r
set statusline+=%2*%a
set statusline+=%2*%k
set statusline+=%5*\ Buffer=%n\   ""
set statusline+=%6*\ %<%{&ff}\  "unix or dos format. < to show that it should wrap there"
set statusline+=%4*\ FileType=%Y\  "File type displayed"
set statusline+=%7*\ %(A=%03b%)  "ascii value of character under cursor"
set statusline+=\ %(H=%02B%)    "hex value of character under cursor"
set statusline+=\  "Just"
"set statusline+=\ [POS=%02v]
"set statusline+=\ \-           " Adds space for readability"
set statusline+=\%=				"Adds the next parts to the right"
set statusline+=%9*\ %003p%%\  "shows the percentage of file currently at"
set statusline+=%1*\ [Pos=%02v/%03l/%03L]\ \ \ \ \ \ \ \ \ \ \ \ \    "Shows cursor pos. Column/Line/Total lines"

